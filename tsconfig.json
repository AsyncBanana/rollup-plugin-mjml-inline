{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "jsx": "react",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
